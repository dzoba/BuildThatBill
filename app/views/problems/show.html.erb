<%- model_class = Problem -%>

<div class="row">
  <div class="span8">
    <div class="page-header">
      <h1><%=t '.title', :default => model_class.model_name.human %></h1>
    </div>

    <dl class="dl-horizontal">
      <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
      <dd><%= @problem.title %></dd>
      <dt><strong><%= model_class.human_attribute_name(:body) %>:</strong></dt>
      <dd><%= @problem.body %></dd>
      <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
      <dd><%= @problem.user.email %></dd>
    </dl>

    <div class="form-actions">
      <%= link_to t('.back', :default => t("helpers.links.back")),
      problems_path, :class => 'btn'  %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
      edit_problem_path(@problem), :class => 'btn' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
      problem_path(@problem),
      :method => 'delete',
      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
      :class => 'btn btn-danger' %>
    </div>
    <div class="row">
      <%= render @problem.comment_threads %>
    </div>
  </div>


    <div class="span4">
      <table class="table">
	<th>Bills referencing this issue</th>
	<tbody>
	  <% @problem.bills.each do |bill| %>
	  <tr><td><%= link_to bill.title, bill_path(bill) %></td></tr>
	  <% end %>
	</tbody>
      </table>
    </div>
  </div>
</div>
